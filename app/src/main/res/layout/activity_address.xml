<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddressActivity">

    <include
        android:id="@+id/toolbar_separate_address_main_activity"
        layout="@layout/mytoolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_separate_address_main_activity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp">

                <Button
                    android:id="@+id/btn_30_bar_separaet_address_main_activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="false"
                    android:layout_weight="0.5"
                    android:background="@color/orange"
                    android:text="30 Bar"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_60_bar_separaet_address_main_activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="#DCDCDC"
                    android:text="60 Bar"
                    android:textSize="10sp" />
            </LinearLayout>

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/txt_disclamer_separate_address_main_activity"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:text="The bar is produced in a facility that handles dairy, wheat, and nut.so we are not responsible for any allergic reactions.  We don’t guarantee the taste and can’t refund the product if they don’t like it.  They are responsible for the use of any bars we make for them.  Our only liability is to remake faulty bars or refund their purchase price.  We reserve the right to not make any formula for any client at our discretion. "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/edit_formulaname_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint=" Formula Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_name_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint=" Customer Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_address1_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint=" Address 1"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_address2_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint=" Address 2"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_city_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint=" City "
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_state_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint=" State "
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_Zip_code_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint=" Zip Code "
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_credit_card_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint=" Credit Card  "
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_expiry_date_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint=" Expiration date "
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_ccv_code_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint=" CCV Code "
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_billing_zipCode_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint=" Billing ZipCode "
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txt_total_amount_separate_address_main_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:text="Total: $85"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:layout_marginBottom="72dp"
                android:background="@color/orange"
                android:text="Submit"
                android:id="@+id/btn_submit_address_activity"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>